<div>
  <h3><%= basket_item.product.name %></h3>
  <h3><%= basket_item.product.price %></h3>
  <%= form_with model: basket_item, local: false do |f| %>
    <%= f.hidden_field :id, value: basket_item.id %>
    <%= f.hidden_field :product_id, value: basket_item.product.id %>
    <%= f.number_field :quantity, value: basket_item.quantity.to_i, min: 1 %>
    <%= f.submit "Update Basket" %>
    <%= link_to "Remove Items", basket_item, method: :delete, remote: true %>
  <% end %>
  <h2>Subtotal: <%= basket_item.total_price.to_s %> â‚¬</h2>
</div>
