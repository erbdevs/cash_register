<% @basket_items.each do |item| %>
  <h3><%= item.product.name %></h3>
  <h3><%= item.product.price %></h3>
  <%= form_with model: item do |f| %>
    <%= f.hidden_field :product_id, value: item.product_id %>
    <%= f.hidden_field :quantity, value: item.quantity.to_i %>
    <%= f.submit "Update Basket" %>
    <%= link_to "Remove Items", item, method: :delete, remote: true %>
  <% end %>
  <h2>Subtotal: <% item.total_price %></h2>
<% end %>

<h3> Your current basket price is <%= current_basket.subtotal %></h3>