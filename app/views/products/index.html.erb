<h1>Choose the products you want!</h1>

<div class="products-container">
  <div class="row row-cols-1 row-cols-sm-3 g-3">
    <% @products.each do |product| %>
      <div class="col">
        <div class="card">
          <img src=<%= "/assets/products/#{product.code.downcase}.jpeg" %> class="card-img-top" alt="card-grid-image">
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text">This is a very healthy product that you should buy soon or later</p>
            <%= form_with model: @basket_item do |f| %>
              <%= f.hidden_field :product_id, value: product.id %>
              <%= f.number_field :quantity, value: 1, min: 1 %>
              <%= f.submit "Add to Basket" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
