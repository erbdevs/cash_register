<h1>Choose the products you want!</h1>

<div class="products-container">
  <div class="row row-cols-1 row-cols-sm-3 g-3">
    <% @products.each do |product| %>
      <div class="col">
        <div class="card">
          <div class="product-image-container">
            <img src=<%= "/assets/products/#{product.code.downcase}.jpeg" %> class="card-img-top" alt="card-grid-image">
          </div>
          <div class="card-body">
            <div class="row product-card-title">
              <div class="col-8 product-card-name text-truncate"><%= product.name %></div>
              <div class="col-4 product-card-price"><%= product.price%> â‚¬</div>
            </div>
            <p class="card-text">This is a very healthy product that you should buy soon or later</p>
            <%= form_with model: @basket_item, local: false do |f| %>
              <%= f.hidden_field :product_id, value: product.id %>
              <div class="add-to-basket-group row row-cols-1">
                <%= f.number_field :quantity, class:"add-to-basket-quantity col-5", value: 1, min: 1 %>
                <%= button_tag(class:"add-to-basket-button offset-md-1 col-5") do %>
                  Add
                  <i class="bi bi-cart-plus-fill"></i>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
